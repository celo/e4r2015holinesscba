<h1>Cidades</h1>

<%= link_to 'Nova Cidade', new_admin_city_path %>
<br>
<br>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |admin_city| %>
      <tr>
        <td><%= admin_city.name %></td>
        <td><%= link_to 'Edit', edit_admin_city_path(admin_city) %></td>
        <td><%= link_to 'Destroy', admin_city_path(admin_city), method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

