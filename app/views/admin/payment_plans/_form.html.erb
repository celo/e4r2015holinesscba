<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for [:admin,@payment_plan] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.input :name, label: "Nome", class: 'form-control' %>
      <%= f.input :abbr, label: "Sigla", class: 'form-control' %>
      <%= f.input :info, label: "Informações" %>

      <%= f.submit "Salvar", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
