<h1>Inscrições</h1>
<div class="row">
	<div>
		<p>
		<%= link_to 'Nova Inscrição', new_admin_subscriber_path, class: "btn btn-sm btn-primary" %>
		<%= link_to 'Lista Completa', list_admin_subscribers_path, class: "btn btn-sm btn-primary" %>
		</p>
		<div class="well well-sm">
			<%= search_form_for [:admin,@search], url: list_admin_subscribers_path, :html=> { class: 'form-inline' }, builder: SimpleForm::FormBuilder do |f| %>
			  	<%= f.input :name_cont, label: "Nome"  %>
			    <%= f.input :church_id_eq, collection: @churches, label_method: :abbr, label: "Igreja" %>
			    <%= f.input :payment_plan_id_eq, collection: @payment_plans, label_method: :abbr, label: "Pagamento" %>
			    <%= f.input :hosting_preference_eq, collection: [['Local','L'],['Hotel','H']], label: "Hospedagem" %>
			  <%= f.submit "Filtrar", class: "btn" %>
			<% end %>
		</div>
		<div class="table-responsive">
			<table class="table table-condensed table-hover table-striped">
			  <thead>
			    <tr>
			      <th>Nome</th>
			      <th>Idade</th>
			      <th>Igreja</th>
			      <th colspan="2"></th>
			    </tr>
			  </thead>

			  <tbody>
			    <% @subscribers.each do |admin_subscriber| %>
			      <tr>
			        <td><%= admin_subscriber.name.upcase %></td>
			        <td width="30"><%= admin_subscriber.age %></td>
			        <td width="150"><%= admin_subscriber.church.abbr %></td>
			        <td width="20"><%= link_to image_tag("page_edit.png", alt: "Editar"), edit_admin_subscriber_path(admin_subscriber) %></td>
			        <td width="20"><%= link_to image_tag("page_delete.png", alt: "Excluir"), admin_subscriber_path(admin_subscriber), method: :delete, data: { confirm: 'Tem certeza?' } %></td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>
		</div>
		<%= link_to 'Nova Inscrição', new_admin_subscriber_path, class: "btn btn-lg btn-primary" %>
		<%= link_to 'Lista Completa', list_admin_subscribers_path, class: "btn btn-lg btn-primary" %>
	</div>
</div>