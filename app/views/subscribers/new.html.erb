<div class="center jumbotron">
  <h1><%= link_to image_tag("holiness-CBA-logo-horizontal-transp.png", alt: "logo"),
            'http://www.holinesscba.com.br' %></h1>

  <h2>
    Formulário de inscrição para o Encontro da 4&ordf; Região
  </h2>
	<div class="left row">
	  <div class="col-md-6 col-md-offset-3">
	    <%= simple_form_for [@subscriber] do |f| %>
	      <%= render 'shared/error_messages', object: f.object %>

				<%= f.input :name, label: "Nome" %>
				<%= f.input :birth_date, as: :string, label: "Data de Nascimento", input_html: { alt: "date", value: @subscriber.new_record? ? "" : @subscriber.birth_date.strftime("%d/%m/%Y") } %>
				<%= f.input :gender, as: :radio_buttons, collection: [['Masculino',true],['Feminino',false]], checked: @subscriber.new_record? ? "" : @subscriber.gender, label: "Sexo" %>
				<%= f.input :address, label: "Endereço" %>
				<%= f.input :neighborhood, label: "Bairro" %>
	      <%= f.input :city_name, url: autocomplete_city_name_admin_subscribers_path, as: :autocomplete, id_element: '#subscriber_city_id' , label: "Cidade" %>
	      <%= f.input :city_id, as: :hidden %>
				<%= f.input :cep, label: "CEP", input_html: { alt: "cep"} %>
				<%= f.input :phone, as: :string, label: "Telefone", input_html: { alt: "phone" } %>
				<%= f.input :cellphone, as: :string, label: "Celular", input_html: { alt: "phone" } %>
				<%= f.input :email, label: "E-mail" %>
				<%= f.input :church_id, collection: @churches, label: "Igreja" %>
				<%= f.input :payment_plan_id, collection: @payment_plans, label: "Plano de Pagamento" %>
				<div class="well well-small" id="payment_plan_info">
					<p>Escolha o Plano de pagamento desejado</p>
				</div>
				<%= f.input :notes, label: "Observações", input_html: { rows: 5 } %>

	      <%= f.submit "Salvar", class: "btn btn-primary" %>
	    <% end %>
	  </div>
	</div>
</div>

