<div class="center">
  <h1><%= image_tag("holiness-logo-vertical.png", alt: "logo", size: "200x149") %></h1>

  <h2>
    Formulário de inscrição para o Encontro da 4&ordf; Região 2015
  </h2>
  <h2>
    Igreja Evang&eacute;lica Holiness de Cuiab&aacute;
  </h2>
	<div class="left row">
	  <div class="col-md-6 col-md-offset-3">
	    <%= simple_form_for([@subscriber], html: { class: 'form-horizontal' }) do |f| %>
	      <%= render 'shared/error_messages', object: f.object %>

				<%= f.input :name, label: "Nome" %>
				<%= f.input :tag_name, label: "Nome Crachá" %>
				<%= f.input :birth_date, as: :string, label: "Data de Nascimento", input_html: { alt: "date", value: @subscriber.new_record? ? "" : @subscriber.birth_date.strftime("%d/%m/%Y") } %>
				<%= f.input :gender, as: :radio_buttons, collection: [['Masculino','M'],['Feminino','F']], label: "Sexo" %>
				<%= f.input :phone, as: :string, label: "Telefone", input_html: { alt: "newphone" } %>
				<%= f.input :cellphone, as: :string, label: "Celular", input_html: { alt: "newphone" } %>
				<%= f.input :email, label: "E-mail" %>
				<%= f.input :church_id, collection: @churches, label: "Igreja" %>
				<%= f.input :payment_plan_id, collection: @payment_plans, label: "Plano de Pagamento" %>
				<div class="well well-small" id="payment_plan_info">
					<p>Escolha o Plano de pagamento desejado</p>
				</div>
				<%= f.input :food_restriction, as: :radio_buttons, collection: [['Não','N'],['Sim','S']], label: "Restrições Alimentares" %>
				<%= f.input :food_restriction_notes, label: "Quais?" %>
				<%= f.input :family, label: "Cônjuge/Familiares", hint: "* Por favor, liste os nomes dos familiares que estarão no Encontro. Não vale como inscrição." %>
				<%= f.input :hosting_preference, as: :radio_buttons, collection: [['Local do Encontro','L'],['Hotel ou Pousada','H']], label: "Preferência de Hospedagem", hint: '* Hospedagem em Hotel ou Pousada será por conta do participante.' %>
				<%= f.input :extra_notes, label: "Observações Extras" %>
				<div class="well well-small">
					<p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Sua inscrição será confirmada posteriormente via e-mail.</p>
					<p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Neste serão solicitadas as informações sobre transporte, dia e horário de chegada.</p>
				</div>

	      <%= f.submit "Enviar", class: "btn btn-primary" %>
	    <% end %>
	  </div>
	</div>
</div>

